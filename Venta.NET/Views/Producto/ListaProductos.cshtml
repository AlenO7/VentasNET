@using VentasNet.Infra.DTO.Request
@model IEnumerable<ProductoReq>



<h1>Lista de Productos</h1>


<table class="table table-dark table-hover">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)  @* ver pq no muestra la descripcion *@
            </th>
            <th>
                
                 @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
            @Html.Label("Acciones")
            </th>
        </tr>
    </thead>
    <tbody>
        @{
  
           
            if (ViewBag.Producto != null)//VERIFICO QUE NO VENGA NULO
            {
                foreach (ProductoReq producto in ViewBag.Producto)
                {
                    <tr>
                        <td>@producto.Nombre</td>
                        <td>@producto.Descripcion</td>
                        <td> $ @producto.Precio</td>
                        <td>@producto.Codigo</td>
                        
                        <td>
                            <!-- NOMBRE DEL BOTON/METODO DONDE APUNTA-->
                            @Html.ActionLink("Editar", "ModificarProducto","Producto", producto, new{ @class="btn btn-primary" })

                            @Html.ActionLink("Borrar", "Delete", "Producto" , producto ,  new{ @class="btn btn-danger" })
                        </td>
                    </tr>

                }

            }


        }

    </tbody>
</table>
