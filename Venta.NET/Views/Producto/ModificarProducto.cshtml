@using VentasNet.Infra.DTO.Request
@model ProductoReq 

<h2>Modificar Producto</h2>


@using (Html.BeginForm("Editar", "Producto", FormMethod.Post))
{
    <div class="container">

        <div class="form-group col-4 ">
            @Html.LabelFor(x=> x.Nombre)
            @Html.TextBoxFor(model => model.Nombre, new {@class="form-control"})
        </div>
        <div class="form-group col-4">
            @Html.LabelFor(x=> x.Descripcion)
            @Html.TextBoxFor(model => model.Descripcion, new {@class="form-control"})
        </div>
        <div class="form-group col-4">
            @Html.LabelFor(x=> x.Precio)
            @Html.TextBoxFor(model => model.Precio, new {@class="form-control"})
        </div>
        <div class="form-group col-4">
            @Html.LabelFor(x=> x.Codigo)
            @Html.TextBoxFor(model => model.Codigo, new {@class="form-control"})
        </div>

       
        <div class=" form-group align-items-end">
            <button class="btn-primary" type="submit">Actualizar</button>
        </div>

    </div>
}